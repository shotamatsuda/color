{
  "name": "@shotamatsuda/color",
  "version": "0.0.1",
  "description": "",
  "repository": "shotamatsuda/color",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "author": "Shota Matsuda",
  "license": "MIT",
  "homepage": "https://github.com/shotamatsuda/color",
  "files": [
    "package.json",
    "README.md",
    "dist/index.js",
    "dist/index.min.js",
    "dist/index.module.js",
    "src"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:main build:module",
    "build:main": "npm-run-all main:compile main:uglify",
    "build:module": "npm-run-all module:compile",
    "main:compile": "rollup -c",
    "main:uglify": "uglifyjs --compress --mangle --output dist/index.min.js dist/index.js",
    "module:compile": "rollup -c rollup.config.module.js",
    "test": "npm-run-all lint test:compile test:local",
    "test:compile": "rollup -c rollup.config.unit.js",
    "test:local": "mocha --recursive test/unit",
    "lint": "eslint src test",
    "watch": "npm-run-all --parallel watch:module watch:test serve",
    "watch:module": "nodemon -C --watch src --exec 'npm-run-all main:compile test:compile'",
    "watch:test": "nodemon -C --watch test --exec 'npm run test:compile'",
    "serve": "browser-sync start --server . --files dist --startPath test --no-notify --no-open"
  },
  "dependencies": {
    "@takram/planck-core": "^0.1.13",
    "babel-polyfill": "^6.23.0",
    "nodemon": "^1.11.0"
  },
  "devDependencies": {
    "@takram/eslint-config-planck": "^0.1.7",
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "browser-sync": "^2.18.12",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^3.19.0",
    "mocha": "^3.4.2",
    "npm-run-all": "^4.0.2",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sinon": "^2.3.8",
    "sinon-chai": "^2.12.0",
    "uglify-js": "^3.0.25"
  }
}
